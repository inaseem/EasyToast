<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/info_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toast_type">

        <RelativeLayout
            android:id="@+id/leftIconContainer"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="20dp"
            android:layout_height="20dp">

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="H"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textImageViewLeft" />

            <ImageView
                android:id="@+id/imgImageViewLeft"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/leftIconContainer"
            android:layout_toEndOf="@+id/leftIconContainer"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/toast_text"
            android:text="This Is Me Naseem Ali"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/toast_type"
        android:layout_alignRight="@+id/toast_type"
        android:layout_width="25dp"
        android:layout_height="30dp">
        <TextView
            android:gravity="bottom"
            android:text="H"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/textImageViewTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:scaleType="center"
            android:id="@+id/imgImageViewTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>